<div class="container">
  <div class="row">
    <h1 class="mb-4"><%= @user.first_name %>'s Record Collection (<%= @records.count %>) </h1>
  </div>

  <% if @user == current_user %>
  <div class="row">
    <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">Library (<%= @records.count %>)</a>
    </li>
    <li class="nav-item">
      <%= link_to "Bookings", bookings_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to "Edit Profile", edit_user_registration_path(current_user), class: 'nav-link' %>
    </li>
  </ul>
  </div>

  <div class="row">
    <%= link_to "Add a New Record to Your Library", new_record_path, class: 'btn btn-primary col-3' %>
  </div>
  <% end %>

  <div class="row">
    <% @records.each do |record|%>
    <div class="card col-4 col-lg-3 m-3 d-flex align-items-stretch" style="width: 18rem;">
      <%= image_tag record.cover, class: "card-img-top"%>
      <div class="card-body">
        <h4 class="card-title record-artist"><%=record.artist%></h4>
        <h5 class="record-title"> <%= link_to record.title, record_path(record), class: 'link-primary text-decoration-none' %></h5>
        <p class="card-text"><%=record.genre.capitalize%></p>
        <p class="card-text">
          <%if record.available%>
            <span class="text-success"><i class="fas fa-record-vinyl"></i>Available</span>
          <%else%>
            <span class="text-danger"><i class="fas fa-record-vinyl"></i>Unavailable</span>
          <%end%>
          <span class="price"><i class="fas fa-pound-sign"></i><%=record.price%></p></span>
          <% if @user == current_user %>
          <div class="row">
            <%= link_to "Edit Record", edit_record_path(record), class: 'btn btn-warning' %>
            <%= link_to "Delete Record", record_path(record), class: 'btn btn-danger', method: :delete, data: {confirm: "Delete #{record.title} from your library"} %>
          </div>
          <%end%>
      </div>
    </div>
    <% end %>
  </div>


</div>
