<div class="container">
  <div class="row">
    <h2 class="col-12 col-md-6 col-lg-6">Send a Message</h2>
  </div>

  <div class="row col-12 col-md-6 col-lg-6">
    <%= simple_form_for(@message) do |f| %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-ghost" %>
      <% end %>
  </div>

</div>
