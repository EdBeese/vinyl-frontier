
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Edit your booking</h1>
        <p>Change your details by filling in the form below</p>
        <%= simple_form_for [ @record, @booking ] do |f| %>
          <%= f.label :pick_up_date, 'Amend Your Pick Up Date and Set a Time' %>
          <br>
          <%= f.datetime_field :pick_up_date, min: Date.today, max: Date.today + 1.week, as: :date, html5: true, class: "date-time" %>
          <br>
          <br>
          <%= f.button :submit, class: "btn btn-turquoise" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
