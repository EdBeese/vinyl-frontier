<div class="container py-5">
  <h1 class="text-center">Book <%= @record.title %></h1>
  <div class="row">
    <div class="col-12 col-md-6 ">
      <div class="bg-white rounded p-3 shadow booking-info">
        <h3>Confirm your booking </h3>
        <br>
          <%= simple_form_for [ @record, @booking ] do |f| %>
              <%= f.label :pick_up_date, 'Select Your Pick Up Date' %>
              <br>
              <%= f.date_field :pick_up_date, min: Date.today, max: Date.today + 1.week, as: :date, html5: true, class: "date-time" %>
              <br>
              <p class="text-muted">Please note that all records must be returned within one week from the date of pickup</p>
              <%= f.button :submit, class: "btn btn-ghost mt-5" %>

            <% end %>

      </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="record-page-map">
        <div style="width: 100%; height: 400px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
