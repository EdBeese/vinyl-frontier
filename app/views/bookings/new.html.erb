<h1>Bookings#new</h1>
<p><%= @booking.record %></p>

     <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Confirm your booking </h3>
          <%= simple_form_for [ @record, @booking ] do |f| %>
              <%= f.input :pick_up_date %>
              <%= f.input :return_date %>
              <%= f.submit "Submit booking", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
