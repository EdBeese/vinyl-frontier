<h1>Create a Booking</h1>

<h2><%= @records.booking.title %></h2>

     <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Confirm your booking </h3>
        <br>
          <%= simple_form_for [ @record, @booking ] do |f| %>
              <%= f.input :pick_up_date %>
              <%= f.input :return_date %>
              <br>
              <%= link_to "Confirm Booking", bookings_show_path(@record), class: "btn btn-success"%>
            <% end %>
      </div>
    </div>
  </div>
